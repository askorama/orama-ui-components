{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "target": "es5",
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/types",
    "declaration": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/__tests__/**"]
}
